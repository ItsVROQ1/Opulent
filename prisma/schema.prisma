// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("BUYER")
  phone         String?
  cnic          String?   @unique
  isVerified    Boolean   @default(false)
  isPremium     Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  profile       Profile?
  idVerifications IDVerification[]
  listings      Listing[]
  inquiries     Inquiry[]
  reviewsGiven   Review[] @relation("Reviewer")
  reviewsReceived Review[] @relation("Reviewee")

  @@map("users")
}

model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique
  firstName       String?
  lastName        String?
  bio             String?
  location        String?
  profileImage    String?
  coverImage      String?
  website         String?
  facebook        String?
  instagram       String?
  twitter         String?
  linkedin        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model IDVerification {
  id            String   @id @default(cuid())
  userId        String
  documentType  String
  status        String   @default("PENDING")
  frontImage    String?
  backImage     String?
  governmentId  String?
  notes         String?
  reviewedAt    DateTime?
  reviewedBy    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("id_verifications")
}

model Listing {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  price       Float?   
  category    String
  subcategory String?
  condition   String   @default("USED")
  location    String?
  images      String?
  isActive    Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  views       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  inquiries Inquiry[]

  @@map("listings")
}

model Inquiry {
  id         String   @id @default(cuid())
  userId     String
  listingId  String
  message    String
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@map("inquiries")
}

model Review {
  id         String  @id @default(cuid())
  reviewerId String
  revieweeId String
  listingId  String?
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())

  reviewer User @relation("Reviewer", fields: [reviewerId], references: [id])
  reviewee User @relation("Reviewee", fields: [revieweeId], references: [id])

  @@unique([reviewerId, revieweeId, listingId])
  @@map("reviews")
}